<div class="row">
    <div class="col-md-12">
          <h2>Categories</h2>
          <hr />

 {{!-- //table div --}}
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                        {{!--confirming the posts.length if true  --}}
                    {{#each data}} 
                        <tr>
                          <td><a href='/posts?category={{id}}'>{{id}}</a></td> 
                          <td><a href='/posts?category={{id}}'>{{category}}</a></td> 
                        </tr>
                    {{/each}}

                </tbody>
            </table>
    </div>

    {{!-- for no data available --}}
     {{#unless data}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
